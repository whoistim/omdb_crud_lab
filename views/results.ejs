<!doctype html>
<html>
  <head>
    <title>Movie Search Results</title>
  </head>
  <body>
  <h1>We found these movies!</h1>

    <ul>
      <!-- Loop over all the films in movieList -->
      <%movieList.forEach(function (film) {%>

      <!-- Only show the results that are movies -->
      <!-- (i.e., do not show TV shows) -->
      <% if (film.Type === "movie") { %>

      <!-- Show the title and the imdbID -->
      <li><%=film.Title%> - <a href = "show/<%=film.imdbID%>"><%=film.imdbID%></a></li>

      <!-- Close the `if` -->
      <% } %>

      <!-- Close the `forEach` -->
      <% }) %>
    </ul>
    
    <form action="/">
      <input type="submit" value="Find More Movies">
    </form>
  </body>
</html>
